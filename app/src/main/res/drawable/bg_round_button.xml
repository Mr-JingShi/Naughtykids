<!-- res/drawable/bg_round_button_selector.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 按压状态 -->
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="@color/btn_default_pressed" />
        </shape>
    </item>

    <!-- 获得焦点状态（可选） -->
    <item android:state_focused="true">
        <shape android:shape="oval">
            <solid android:color="@color/btn_default_pressed" />
        </shape>
    </item>

    <!-- 默认状态 -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/btn_default_normal" />
            <!-- 可选：添加轻微边框 -->
            <stroke
                android:width="1dp"
                android:color="#CCCCCC" />
        </shape>
    </item>

</selector>
